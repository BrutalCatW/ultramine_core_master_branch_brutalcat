<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="org.ultramine.server.bootstrap.log4j">
    <Appenders>
        <Console name="SysOut" target="SYSTEM_OUT">
            <UMConsoleLayout />
        </Console>
        <RollingRandomAccessFile name="FileRaw" fileName="logs/latest.log" filePattern="logs/%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%t/%level] [%logger/%X{mod}]: %msg%n" />
            <Policies>
                <OnStartupTriggeringPolicy />
            </Policies>
        </RollingRandomAccessFile>
        <Rewrite name="File">
            <AppenderRef ref="FileRaw" />
            <UMStripColorsRewritePolicy />
        </Rewrite>
    </Appenders>
    <Loggers>
        <!-- Reduce noise from common warnings that are not critical -->
        <Logger name="mixin" level="WARN" additivity="true">
            <filters>
                <RegexFilter regex=".*@Mixin target.*client.*was not found.*" onMatch="DENY" onMismatch="NEUTRAL" />
                <RegexFilter regex=".*Error loading class:.*client.*" onMatch="DENY" onMismatch="NEUTRAL" />
            </filters>
        </Logger>
        
        <!-- Filter LaunchWrapper duplicate warnings -->
        <Logger name="LaunchWrapper" level="WARN" additivity="true">
            <filters>
                <RegexFilter regex=".*Tweak class name.*already.*visited.*" onMatch="DENY" onMismatch="NEUTRAL" />
            </filters>
        </Logger>
        
        <Root level="all" includeLocation="false">
            <filters>
                <MarkerFilter marker="NETWORK_PACKETS" onMatch="DENY" onMismatch="NEUTRAL" />
            </filters>
            <AppenderRef ref="SysOut" level="INFO" />
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
